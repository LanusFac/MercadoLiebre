<!DOCTYPE html>
<html>
    <%- include("./partials/create/head") %>

    <body>
        <%- include("./partials/index/header") %>

        <section class="container">
            <div class="row">
                <div class="col-6 campos-formulario">
                    <form action="/products/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="campo">
                            <label for="name">Name:</label>
                            <input type="text" name="name" value="<%=product.name%>">
                        </div>
                        <div class="campo">
                            <label for="description">Descripci√≥n:</label>
                            <input type="text" name="description" value="<%=product.description%>">
                        </div>
                        <div class="campo">
                            <label for="price">Precio</label>
                            <input type="number" name="price" value="<%=product.price%>">
                        </div>
                        <div class="campo">
                            <label for="discount">Descuento</label>
                            <input type="number" name="discount" value="<%=product.discount%>">
                        </div>
                        <div class="campo">
                            <label for="category" class="campoCategoria">Seleccione una categoria:</label>
                            <select name="category" id="">
                                <option value="in-sale">En oferta</option>
                                <option value="visited">Visitado</option>
                            </select>
                        </div>
                        <div>
                            <input type="file" name="productImg">
                        </div>
                        <div>
                            <button type="submit">Publicar</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </section>

        <%- include("./partials/index/footer") %>
    </body>
</html>